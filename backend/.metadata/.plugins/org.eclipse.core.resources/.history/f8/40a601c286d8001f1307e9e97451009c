package com.example.votingSystem.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.query.Procedure;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.example.votingSystem.enums.Role;
import com.example.votingSystem.model.entity.User;

@Repository
public interface UserRepository extends JpaRepository<User, Long> {
	
	@Procedure(name = "sp_register_user")
    void registerUser(
        @Param("p_email") String email,
        @Param("p_password_hash") String passwordHash,
        @Param("p_salt") String salt,
        @Param("p_username") String username,
        @Param("p_role") Role role
    );
	
}
